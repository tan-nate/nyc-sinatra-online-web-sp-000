<h2>All Historical Landmarks</h2>

<ul>
  <% @landmarks.each do |landmark| %>
    <li><a href="<%= "/landmark/#{landmark.id}" %>"><%= landmark.name %></a></li>
  <% end %>
</ul>

<table>
  <tr>
    <th>Name</th>
    <th>Year Completed</th>
  </tr>
  <% @landmarks.each do |landmark| %>
    <tr>
      <td><%= landmark.name %></td>
      <td><%= landmark.year_completed %></td>
    </tr>
  <% end %>
<table>

