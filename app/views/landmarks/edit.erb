<h2>Edit Historical Landmark</h2>

<form action="/landmarks/<%= @landmark.id %>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch"></input>
  <label for="landmark[name]">Name</label>
  <input type="text" name="landmark[name]" id="name" "value=<%= @landmark.name %>"></input>
  <label for="landmark[year_completed]">Year Completed</label>
  <input type="text" name="landmark[year_completed]" id="year_completed" "value=<%= @landmark.year_completed %>"></input>
  <br>
  <input type="submit" value="Edit Landmark"></input>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
